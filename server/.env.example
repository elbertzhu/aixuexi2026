# AI Configuration - C-Round
# Copy this file to .env and fill in your values

# AI 开关 (true = 开启 AI 服务)
AI_ENABLED=true

# AI Provider: 'mock' | 'minimax'
# mock: 开发测试，不产生费用
# minimax: 真实 AI 调用
AI_PROVIDER=mock

# --- MiniMax 配置 ---
# 从 https://api.minimax.chat 获取
MINIMAX_API_KEY=your_api_key_here
MINIMAX_BASE_URL=https://api.minimax.chat/v1/text/chatcompletion_v2
MINIMAX_MODEL=abab6.5s-chat
MINIMAX_TIMEOUT=15000

# --- 限流配置 ---
# 每分钟最大请求数 (0 = 不限制)
AI_RATE_LIMIT_PER_MIN=10
# 每日最大请求数 (0 = 不限制)
AI_RATE_LIMIT_PER_DAY=1000

# --- 成本配置 ---
# MiniMax 价格 (USD per 1M tokens)
MINIMAX_PRICE_INPUT=1.0
MINIMAX_PRICE_OUTPUT=2.0
# 每日预算限制 USD (0 = 不限制)
AI_DAILY_BUDGET=5.0

# --- 功能开关 ---
# 出题功能
AI_FEATURE_GENERATE=true
# 解析功能
AI_FEATURE_EXPLAIN=true
